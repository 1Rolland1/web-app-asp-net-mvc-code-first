@using WebAppAspNetMvcCodeFirst.Models
@using WebAppAspNetMvcCodeFirst.Extensions
@model List<Teacher>

<h3>Учителя</h3>

@Html.ActionLink("Добавить запись", "Create", "Teachers")

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                Имя
            </th>
            <th>
                Пол
            </th>
            <th>
                Действия
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
        <tr>
            <td>
                @teacher.Name
            </td>
            <td>
                @teacher.Sex.GetDisplayValue()
            </td>
            <td>
                @Html.ActionLink("Удалить", "Delete", "Teachers", new { id = teacher.Id }, new { })
                @Html.ActionLink("Изменить", "Edit", "Teachers", new { id = teacher.Id }, new { })
            </td>
        </tr>
        }
    </tbody>
</table>